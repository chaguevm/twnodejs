<div class="card">
    <div class="card-header">
        <div class="h5 text-center">Recommended users</div>
    </div>
</div>
<div id="app">
<div v-for="user in users" class="card gedf-card">
    <div class="card-body">
        <div class="d-flex justify-content-start align-items-center">
            <div class="mr-2">
                <img class="rounded-circle" width="70" src="https://picsum.photos/50/50" alt="">
            </div>
            <div class="ml-2">
                <div class="h5 m-0"><a :href="'/profile/'+user.username">@\{{user.username}}</a></div>
                <div class="h7 text-muted">\{{user.fullname}} </div>
                <div class="h7">\{{user.description}}</div>
            </div>
        </div>
    </div>
</div>
</div>